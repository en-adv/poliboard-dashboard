{
  "projects": {
    "client": {
      "src": "client/",
      "buildCommand": "npm run build",
      "outputDirectory": "build"
    },
    "server": {
      "src": "server/",
      "buildCommand": "npm install",
      "outputDirectory": "."
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.js" }, // Redirect API requests to the backend
    { "src": "/(.*)", "dest": "client/$1" }           // Redirect other requests to the frontend
  ]
}
